<hibernate-mapping>
    <class name = "ru.asemenov.models.Model" table = "model">
        <id name = "id" column = "id">
            <generator class = "identity"/>
        </id>
        <property name = "name" column = "name"/>
        <many-to-one name = "mark" column = "mark_id" class = "ru.asemenov.models.Mark"/>
    </class>
</hibernate-mapping>